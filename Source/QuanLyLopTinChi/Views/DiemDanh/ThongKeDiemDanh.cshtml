@model List<QuanLyLopTinChi.Models.DiemDanh>
@{
    ViewBag.Title = "Thống Kê Điểm Danh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript">
        $(function () {
            // Mặc định ẩn phần tìm kiếm lớp
            $("#hideText").hide();
            $("#contentDiv").hide();
        });
        function show() {
            $("#contentDiv").show(1000);
            $("#hideText").show(1000);
            $("#showText").hide(1000);
        };
        function hide() {
            $("#contentDiv").hide(1000);
            $("#hideText").hide(1000);
            $("#showText").show(1000);
        };
    </script>
}

<h2 class="name">
    <span class="name_cont">
        <a href="#">
            Thống Kê Điểm Danh
        </a>
    </span><span class="name_last">&nbsp;</span>
</h2>
<div class="bor pad-sml">
    <div class="scrollable-table">

        <h3 class="name show">
            <a id="showText" href="javascript:show();">
                Hiển Thị Ghi chú
            </a>
            <a id="hideText" href="javascript:hide();">
                Ẩn Ghi chú
            </a>
        </h3>

        <div id="contentDiv">
            <h3>Số buổi nghỉ cho phép: <b style="color:red">@ViewBag.SoBuoiNghiChoPhep</b></h3>

            <table>
                <tr>
                    <th>
                        Ký Hiệu
                    </th>

                    <th>
                        Nội Dung
                    </th>
                </tr>
                @foreach (var item in (List<QuanLyLopTinChi.Models.TinhTrangDiHoc>)ViewBag.ListTinhTrangDiHoc)
                {
                    <tr>
                        <td>
                            @item.KyHieu
                        </td>

                        <td>
                            @item.NoiDung
                        </td>
                    </tr>

                }
                <tr>
                    <td>
                        <a style="background-color:yellowgreen"></a>
                    </td>
                    <td>
                        Báo động
                    </td>
                </tr>
                <tr>
                    <td>
                        <a style="background-color: red"></a>
                    </td>
                    <td>
                        Cấm thi
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

    <div class="bor pad-sml">
        <div class="scrollable-table">

            <h3 class="name">
                Danh Sách Điểm Danh
            </h3>

            <table class="table table-striped table-header-rotated">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>

                        <th>
                            Họ Tên
                        </th>

                        @foreach (var item in (List<QuanLyLopTinChi.Models.BuoiHoc>)ViewBag.ListBuoiHocTheoLop)
                        {
                            <th class="rotate-45">
                                <div>
                                    <span> @item.NgayHoc.ToString("dd'/'MM'/'yyyy")</span>
                                </div>
                            </th>
                        }

                    </tr>

                    @{int i = 0;
                    int CountSoBuoiHoc = ((List<QuanLyLopTinChi.Models.BuoiHoc>)ViewBag.ListBuoiHocTheoLop).Count();
                    }
                </thead>
                <tbody>
                                    @foreach (var itemDanhSach in (List<QuanLyLopTinChi.Models.DanhSach>)ViewBag.ListDanhSachTheoLop)
                                    {
                                        <tr
                                        @{List<QuanLyLopTinChi.Models.DiemDanh> ListDiemDanhTheoLop = (List<QuanLyLopTinChi.Models.DiemDanh>)ViewBag.ListDiemDanhTheoLop;

                                        double SoNgayNghiKhongPhep = (from n in ListDiemDanhTheoLop
                                                                      where (n.IdNguoiDung == itemDanhSach.IdNguoiDung) &&
                                                                          // Tình Trạng là nghỉ không phép
                                                                      (n.TinhTrangDiHoc.IdTinhTrangDiHoc == 2)
                                                                      select n).Count();

                                        // Nếu đến ngưỡng báo động
                                        if ((SoNgayNghiKhongPhep == (Int32)ViewBag.SoBuoiNghiChoPhep) && ((double)ViewBag.SoBuoiNghiChoPhep > 0))
                                        {
                                            <text>
                                                style="color: yellowgreen"
                                            </text>
                                        }
                                        else
                                        {
                                            // Nếu nghỉ quá số ngày cho phép
                                            if ((SoNgayNghiKhongPhep > ViewBag.SoBuoiNghiChoPhep) && ((double)ViewBag.SoBuoiNghiChoPhep > 0))
                                            {
                                                <text>
                                                    style="color: red"
                                                </text>
                                            }
                                            else //nếu không vượt quá số ngày nghỉ cho phép
                                            {
                                                <text>
                                                </text>
                                            }
                                        }}

                                        >


                                        <td>
                                        @(i + 1)
                                        </td>
                                        <th>
                                        <a title="Mã Sinh Viên: @itemDanhSach.NguoiDung.UserName
Ngày sinh @itemDanhSach.NguoiDung.NgaySinh.ToString("dd'/'MM'/'yyyy")
Lớp @itemDanhSach.NguoiDung.DonViQuanLy.TenDonViQuanLy">

                                        @itemDanhSach.NguoiDung.HoTen
                                        </a>
                                        </th>

                                        @for (int j = 0; j < ((List<QuanLyLopTinChi.Models.BuoiHoc>)ViewBag.ListBuoiHocTheoLop).Count(); j++)
                                        {
                                            <td>
                                            @Model[(i * CountSoBuoiHoc) + j].TinhTrangDiHoc.KyHieu
                                            </td>
                                        }
                                        @{i++;}
                                        </tr>
                                    }
                                </tbody>
            </table>
        </div>
    </div>
