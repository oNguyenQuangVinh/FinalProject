@model List<QuanLyLopTinChi.Models.NguoiDung>

@{
    Layout = null;
}

<table>
    <tr>
        <th>
            Ảnh
        </th>
        <th>
            @Html.ActionLink("Mã Sinh Viên", "XemDanhSachSinhVien", "DanhSach", new { sortOrder = ViewBag.MaSortParm }, null)
        </th>
        <th>
            @Html.ActionLink("Họ Tên", "XemDanhSachSinhVien", "DanhSach", new { sortOrder = ViewBag.TenSortParm }, null)
        </th>
        <th>
            @Html.ActionLink("Ngày Sinh", "XemDanhSachSinhVien", "DanhSach", new { sortOrder = ViewBag.NgaySinhSortParm }, null)
        </th>
        <th>
            @Html.ActionLink("Lớp", "XemDanhSachSinhVien", "DanhSach", new { sortOrder = ViewBag.LopSortParm }, null)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="~/NguoiDung/Details?id=@item.IdNguoiDung">
                    <img class="imgDanhSachSinhVien" src="@item.DuongDanAnh" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViQuanLy.TenDonViQuanLy)
            </td>
        </tr>
    }

</table>