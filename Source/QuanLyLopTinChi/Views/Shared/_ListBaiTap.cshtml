@model List<QuanLyLopTinChi.Models.BaiTap>
@{
    Layout = null;
}

<table>
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.ActionLink("Tên Bài Tập", "Index", new { sortOrder = ViewBag.TenBaiTapSortParm })
        </th>
        <th>
            @Html.ActionLink("Đề Bài Tập", "Index", new { sortOrder = ViewBag.MoTaBaiTapSortParm })
        </th>
        <th>
            @Html.ActionLink("Mô Tả", "Index", new { sortOrder = ViewBag.MoTaBaiTapSortParm })
        </th>
        <th>
            @Html.ActionLink("Bắt Đầu", "Index", new { sortOrder = ViewBag.BatDauSortParm })
        </th>
        <th>
            @Html.ActionLink("Hạn Nộp Bài", "Index", new { sortOrder = ViewBag.NopBaiSortParm })
        </th>
        <th>
            @Html.ActionLink("Gia Hạn", "Index", new { sortOrder = ViewBag.NopBaiSortParm })
        </th>
        <th>
            @Html.ActionLink("Đánh Dấu Muộn", "Index", new { sortOrder = ViewBag.NopBaiSortParm })
        </th>
        <th>
            Tùy Chỉnh
        </th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @(i + 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].TenBaiTap)
            </td>
            <td>
                @if (Model[i].TaiLieu != null)
                {
                    <text>
                        @Html.ActionLink(@Model[i].TaiLieu.TenTaiLieu,
                                        "DownloadTaiLieu",
                                        "TaiLieu",
                                     new { TenTaiLieu = @Model[i].TaiLieu.DuongDan },
                                        null)
                    </text>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].MoTaBaiTap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].ThoiGianBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].ThoiGianNopBai)
            </td>
            <th>
                @Html.DisplayFor(modelItem => modelItem[i].ChoPhepGiaHan)
            </th>
            <th>
                @Html.DisplayFor(modelItem => modelItem[i].DanhDauNopMuon)
            </th>
            <td>
                @Html.ActionLink("Chi Tiết", "Details", "BaiTap", new { id = Model[i].IdBaiTap }, null) |
                @Html.ActionLink("Chỉnh sửa", "Edit", "BaiTap", new { id = Model[i].IdBaiTap }, null) |
                @Html.ActionLink("Chấm Bài", "ChamBai", "BaiLam", new { id = Model[i].IdBaiTap }, null) |
                @Html.ActionLink("Sửa Điểm", "SuaDiem", "BaiLam", new { id = Model[i].IdBaiTap }, null)
            </td>
        </tr>

    }

</table>